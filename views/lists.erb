
<h1>ALL LISTS</h1>

<hr>

<% @lists.each do |list| %>
  <p class="<%= list.done? ? 'done' : 'undone' %>">
    <a href="/lists/<%= list.path %>" class="box-link">
      <%= list.name %>
     [<%= list.size %>]
    </a>
  </p>
<% end %>

<div class="major">
  <p><a href="/lists/new">+ NEW LIST</a></p>
</div>

<hr>
